<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="my_property_search" model="ir.ui.view">
        <field name="name">Estate Property Search</field>
        <field name="model">my.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
               
                <group expand="1" string="Group By">
                    <filter string="My Property" name="partner_id" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
